<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Expense Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="w-50 background-color: rgba(0,0,255,.1)">
    <div class="d-flex flex-column align-items-center">
      <h2 class="mt-3">Expense Tracker</h2>
      <% if (error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>
      <form id="expense-form" class="row g-3" method="POST" action="/signup">
        <div class="col-12">
          <label for="user" class="form-label">Username:</label>
          <input type="text" name="username" id="user" class="form-control" required>
        </div>
        <div class="col-12">
          <label for="email" class="form-label">Email:</label>
          <input type="email" name="email" id="email" class="form-control" required>
        </div>
        <div class="col-12">
          <label for="pass" class="form-label">Password:</label>
          <input type="password" name="password" id="password" class="form-control" required>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Sign up</button>
        </div>
        <p>Alerady have an account? <a href="/signin">Sign Up</a></p>
      </form>
    </div>
  </div>
  <ul id="expense-list" class="mt-3"></ul>
</body>
</html>
